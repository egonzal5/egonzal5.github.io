% The settings for the title page
\defbeamertemplate*{title page}{jmct}
{
  \vfill
    {\centering
      \usebeamerfont{title}\usebeamercolor[fg]{title}\inserttitle
      \par
    }
    \vskip1cm%
    {\centering
      \usebeamerfont{subtitle}\usebeamercolor[fg]{subtitle}\insertsubtitle
      \par
    }
    \vskip1cm%
    {\centering
      \usebeamerfont{subtitle}\usebeamercolor[fg]{my-magenta}\insertdate
      \par
    }
  \vfill
}

\setbeamertemplate{itemize items}[square]
